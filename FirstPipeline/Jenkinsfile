pipeline {
    agent any
    stages {
        stage('docker build') {
            steps {
                script {
                    bat "docker build -f FirstPipeline/Dockerfile -t juancdiazd/continuous-integration:latest-${BUILD_ID} FirstPipeline"
                }
            }
        }
        stage('docker push') {
            steps {
                script {
                    withDockerRegistry('docker.io/juancdiazd/continuous-integration:latest','docker-hub-credentials') {
                    cont.push()
                    cont.push('latest')
                    }
                }
            }
        }
    }
}