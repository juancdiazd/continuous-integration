pipeline {
    agent any
    stages {
        stage('docker build') {
            steps {
                script {
                    bat "docker build -f FirstPipeline/Dockerfile -t juancdiazd/continuous-integration:latest-${BUILD_ID} FirstPipeline"
                }
            }
        }
        stage('docker push') {
            steps {
                echo "Workspace is $WORKSPACE"
                dir("$WORKSPACE/dir-to-Dockerfile")
                script {
                    def REGISTRY_URL = "https://index.docker.io/v1/"
                    def USER_NAME = "juancdiazd"
                    docker.withRegistry("$REGISTRY_URL", 'docker-hub-credentials')
                    bat "docker push juancdiazd/continuous-integration:latest-${BUILD_ID}"
                }
            }
        }
    }
}