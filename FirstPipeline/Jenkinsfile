pipeline {
    agent any

    stages {
        stage('docker build') {
            steps {
                script {
                    bat "docker build -f FirstPipeline/Dockerfile -t juancdiazd/continuous-integration:latest-${BUILD_ID} FirstPipeline"
                }
            }
        }
        stage('docker push') {
            steps {
                withCredentials([usernamePassword( credentialsId: 'docker-hub-credentials', usernameVariable: 'juancdiazd', passwordVariable: 'Soft9608!')]) {
                def registry_url = "registry.hub.docker.com/"
                bat "docker login -u $USER -p $PASSWORD ${registry_url}"
                docker.withRegistry("http://${registry_url}", "docker-hub-credentials")
                script {
                    bat "docker push juancdiazd/continuous-integration:latest-${BUILD_ID}"
                }
            }
        }
    }
}