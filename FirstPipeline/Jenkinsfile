pipeline {
    agent any
    stages {
        stage('docker build') {
            steps {
                script {
                    bat "docker build -f FirstPipeline/Dockerfile -t juancdiazd/continuous-integration:latest-${BUILD_ID} FirstPipeline"
                }
            }
        }
        stage('Login') {
			steps {
                script {
				   withCredentials([[$class: 'UsernamePasswordMultiBinding', credentialsId: 'docker-hub-credentials',
                   usernameVariable: 'juancdiazd', passwordVariable: 'Soft9608!']]) {
                   bat 'docker login -u "$USERNAME" -p "$PASSWORD" --password-stdin'
    }
                } 
			}
		}
        stage('docker push') {
            steps {
                script {
                    bat "docker push juancdiazd/continuous-integration:latest-${BUILD_ID}"
                }
            }
        }
    }
}