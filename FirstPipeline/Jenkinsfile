pipeline {
    agent any
    stages {
        stage('docker build') {
            steps {
                script {
                    bat "docker build -f FirstPipeline/Dockerfile -t juancdiazd/continuous-integration:latest-${BUILD_ID} FirstPipeline"
                }
            }
        }
        stage('Login') {
			steps {
                script {
				   docker.withRegistry('docker.io/juancdiazd/continuous-integration:lastest', 'docker-hub-credentials')
                }
			}
		}
        stage('docker push') {
            steps {
                script {
                    bat "docker push juancdiazd/continuous-integration:latest-${BUILD_ID}"
                }
            }
        }
    }
}